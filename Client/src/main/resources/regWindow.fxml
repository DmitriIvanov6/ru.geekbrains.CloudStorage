<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="306.0" prefWidth="498.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ControllerRegistrationWindow">
   <AnchorPane prefHeight="323.0" prefWidth="468.0">
      <children>
         <Label layoutX="99.0" layoutY="56.0" text="Введите имя пользователя и пароль">
            <font>
               <Font size="18.0" />
            </font>
         </Label>
         <TextField fx:id="login" layoutX="249.0" layoutY="114.0" promptText="Имя пользователя" />
         <TextField fx:id="password" layoutX="249.0" layoutY="176.0" promptText="Пароль" />
         <Label layoutX="53.0" layoutY="114.0" text="Имя пользователя">
            <font>
               <Font size="17.0" />
            </font>
         </Label>
         <Label layoutX="138.0" layoutY="175.0" text="Пароль">
            <font>
               <Font size="17.0" />
            </font>
         </Label>
         <Label fx:id="errorMessageUsername" layoutX="81.0" layoutY="216.0" text="Данное имя пользователя уже занято" textFill="#ed0707" visible="false">
            <font>
               <Font size="18.0" />
            </font>
         </Label>
         <Label fx:id="errorMessageEmptyField" layoutX="120.0" layoutY="216.0" text="Все поля должны быть заполены" textFill="#ed0707" visible="false">
            <font>
               <Font size="18.0" />
            </font>
         </Label>
         <Button layoutX="181.0" layoutY="252.0" mnemonicParsing="false" onAction="#register" text="Зарегистрировать">
            <font>
               <Font size="14.0" />
            </font>
         </Button>
      </children>
   </AnchorPane>


</VBox>
